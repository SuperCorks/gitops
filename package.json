{
  "name": "@supercorks/gitops",
  "version": "1.0.4",
  "description": "A comprehensive suite of Git operation tools for streamlined development workflows including branch promotion, cleanup, post-merge automation, and release management.",
  "homepage": "https://github.com/SuperCorks/gitops#readme",
  "bugs": {
    "url": "https://github.com/SuperCorks/gitops/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SuperCorks/gitops.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "build/index.js",
  "bin": {
    "git-promote": "build/git-promote.js",
    "git-propagate": "build/git-propagate.js",
    "git-cleanup": "build/git-cleanup.js",
    "git-done": "build/git-done.js",
    "git-release-notes": "build/git-release-notes.js",
    "git-install-aliases": "build/git-install-aliases.js",
    "git-wip": "build/git-wip.js",
    "git-acp": "build/git-acp.js",
    "git-feat": "build/git-feat.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepare": "husky",
    "git:hooks": "husky init . 'npm run build && npm test'"
  },
  "devDependencies": {
    "@types/node": "24.1.0",
    "@types/yargs": "^17.0.33",
    "typescript": "5.8.3",
    "vitest": "^2.1.3",
    "husky": "^9.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "git",
    "cli"
  ],
  "dependencies": {
    "yargs": "^18.0.0"
  }
}
